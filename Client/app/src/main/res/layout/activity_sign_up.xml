<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/btnReturnLogin" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context="com.example.stach.app_test.SignUpActivity">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/ic_add_user"/>
            <!--Nome-->
            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="Nome"
                android:inputType="text" />

            <!--Data nascita-->
            <EditText
                android:id="@+id/data_nascita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="data di nascita"
                android:inputType="datetime" />
            <!--Cognome-->

            <EditText
                android:id="@+id/cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="cognome"

                android:inputType="text" />
            <!--telefono-->
            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="Telefono"
                android:inputType="phone" />
            <!--username-->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="username"
                android:inputType="text" />
            <!--user email-->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="@string/prompt_email"
                android:inputType="text" />
            <!--password-->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="@string/prompt_password"
                android:inputType="textPassword" />
            <!--repeated password-->
            <EditText
                android:id="@+id/repPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:hint="@string/prompt_pass_repeate_signUp"
                android:inputType="textPassword" />
            <!--button for signup-->
            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background = "@drawable/roundedbutton"
                android:onClick="sendDataForSignUp"
                android:text="@string/btn_signUp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="normal" />
            <!--Only for padding-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--text or-->
            <TextView
                android:id="@+id/text_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_or"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <!--Only for padding-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--button for login-->
            <Button
                android:id="@+id/btnReturnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background = "@drawable/roundedbutton"
                android:onClick="returnToLogin"
                android:text="@string/btn_return_login"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context="com.example.stach.app_test.ProfileFragment">

    <!--Only for padding-->
    <!-- linear for mail icon and mail text-->
    <!--Only for padding-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Data_Nascita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cognome" />

        <TextView
            android:id="@+id/Telefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Data_Nascita" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Telefono" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Username" />

        <TextView
            android:id="@+id/Saldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Email" />

        <TextView
            android:id="@+id/Nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Cognome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_trasparente"
            android:paddingVertical="10dp"
            android:scrollbars="none|horizontal"
            android:textAlignment="textStart"
            android:textColor="#1D1C1D"
            android:textIsSelectable="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_profile"
            app:layout_constraintTop_toBottomOf="@+id/Nome" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="97dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background=" #E4DBC5"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/Data_Nascita"
            app:layout_constraintEnd_toStartOf="@+id/Nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>